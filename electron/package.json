{
  "name": "kalku-app",
  "version": "1.0.0",
  "main": "electron/main.js",
  "author": "Semesta Labs",
  "description": "Kalkulator Teknik Modern berbasis Electron + Vite",
  "scripts": {
    "dev": "vite",
    "build:web": "vite build",
    "build:electron": "npm run build:web && electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "com.semestalabs.kalku",
    "productName": "Kalku Desktop",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@vitejs/plugin-react": "^5.0.4",
    "electron-builder": "^26.0.12"
  }
}
